{
  "name": "whisk-store-api",
  "version": "1.0.0",
  "description": "Whisk.se Store API",
  "main": "app.js",
  "scripts": {
    "start": "npm run build",
    "prebuild": "rm -rf ./dist",
    "build": "tsc",
    "postbuild": "cp package*.json ./dist",
    "dev": "nodemon --exec ts-node ./app.ts",
    "ngrok": "ngrok http 5000",
    "test": "DEBUG=store-api,store-api:* DEBUG_DEPTH=5 nyc mocha --require test/fixtures.cjs --require ts-node/register test/*"
  },
  "author": "Steve Bunting",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "debug": "^4.3.1",
    "dotenv": "^8.2.0",
    "ejs": "^3.1.5",
    "express": "^4.17.1",
    "luxon": "^1.25.0",
    "mongodb": "^3.6.3",
    "nodemailer": "^6.4.17",
    "swish-merchant": "^0.1.0",
    "winston": "^3.3.3",
    "winston-mongodb": "^5.0.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.9",
    "@types/debug": "^4.1.5",
    "@types/ejs": "^3.0.5",
    "@types/express": "^4.17.9",
    "@types/luxon": "^1.25.0",
    "@types/mocha": "^8.2.0",
    "@types/mongodb": "^3.6.3",
    "@types/node": "^14.14.14",
    "@types/nodemailer": "^6.4.0",
    "@types/rewire": "^2.5.28",
    "@types/sinon": "^9.0.9",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "eslint": "^7.16.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0",
    "rewire": "^5.0.0",
    "sinon": "^9.2.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      "node_modules/**/node_modules"
    ],
    "env": {
      "NODE_ENV": "development",
      "PORT": 5000,
      "DEBUG": "store-api,store-api:*",
      "DEBUG_DEPTH": 5
    }
  }
}
