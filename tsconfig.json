{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "strict": true,
    "noImplicitAny": true
  },
  "include": [
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    ".vscode"
  ]
}
